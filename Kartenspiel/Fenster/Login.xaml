<Page x:Class="Kartenspiel.Fenster.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kartenspiel.Fenster"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Kartenspiel;component/Logo1.jpg"/>
        </Grid.Background>
        <Grid>
            <TextBox Name="txtSpieler1Name" HorizontalAlignment="Right" Height="23" Margin="75,90,30,0" TextWrapping="Wrap" Text="Osman" VerticalAlignment="Top" Width="120"/>
            <Label Content="Spieler 1" HorizontalAlignment="Right" Margin="0,52,91,0" VerticalAlignment="Top" Background="White" Width="59"/>

            <TextBox Name="txtSpieler2Name" HorizontalAlignment="Right" Height="23" Margin="305,250,30,0" TextWrapping="Wrap" Text="Taha" VerticalAlignment="Top" Width="120"/>
            <Label Content="Spieler 2" HorizontalAlignment="Right" Margin="0,210,91,0" VerticalAlignment="Top" Background="White" Width="59"/>

            <Button Content="Spiel starten" HorizontalAlignment="Right" Margin="0,360,30,0" VerticalAlignment="Top" Width="120" Click="BtnSpielStarte_Click" Height="52"/>

        </Grid>
        <Image/>
    </Grid>
</Page>
